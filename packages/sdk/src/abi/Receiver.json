[
  {
    "type": "constructor",
    "inputs": [
      { "name": "_messageHub",    "type": "address" },
      { "name": "_hubSigningKey", "type": "address" }
    ]
  },
  {
    "type": "function",
    "name": "receiveMessage",
    "inputs": [
      {
        "name": "message",
        "type": "tuple",
        "components": [
          { "name": "id",          "type": "uint256" },
          { "name": "sender",      "type": "address" },
          { "name": "target",      "type": "address" },
          { "name": "data",        "type": "bytes"   },
          { "name": "sourceChain", "type": "uint32"  }
        ]
      },
      { "name": "proof", "type": "bytes" }
    ],
    "outputs": [{ "name": "success", "type": "bool" }],
    "stateMutability": "nonpayable"
  },
  {
    "type": "function",
    "name": "proofPayload",
    "inputs": [
      {
        "name": "message",
        "type": "tuple",
        "components": [
          { "name": "id",          "type": "uint256" },
          { "name": "sender",      "type": "address" },
          { "name": "target",      "type": "address" },
          { "name": "data",        "type": "bytes"   },
          { "name": "sourceChain", "type": "uint32"  }
        ]
      }
    ],
    "outputs": [{ "name": "", "type": "bytes32" }],
    "stateMutability": "pure"
  },
  {
    "type": "function",
    "name": "nonExecutionProofPayload",
    "inputs": [
      { "name": "messageId",        "type": "uint256" },
      { "name": "destinationChain", "type": "uint32"  }
    ],
    "outputs": [{ "name": "", "type": "bytes32" }],
    "stateMutability": "pure"
  },
  {
    "type": "function",
    "name": "setRelayer",
    "inputs": [
      { "name": "relayer",    "type": "address" },
      { "name": "authorized", "type": "bool"    }
    ],
    "outputs": [],
    "stateMutability": "nonpayable"
  },
  {
    "type": "function",
    "name": "setHubSigningKey",
    "inputs": [{ "name": "newKey", "type": "address" }],
    "outputs": [],
    "stateMutability": "nonpayable"
  },
  {
    "type": "function",
    "name": "transferOwnership",
    "inputs": [{ "name": "newOwner", "type": "address" }],
    "outputs": [],
    "stateMutability": "nonpayable"
  },
  {
    "type": "function",
    "name": "isProcessed",
    "inputs": [
      {
        "name": "message",
        "type": "tuple",
        "components": [
          { "name": "id",          "type": "uint256" },
          { "name": "sender",      "type": "address" },
          { "name": "target",      "type": "address" },
          { "name": "data",        "type": "bytes"   },
          { "name": "sourceChain", "type": "uint32"  }
        ]
      }
    ],
    "outputs": [{ "name": "", "type": "bool" }],
    "stateMutability": "view"
  },
  {
    "type": "function",
    "name": "getReceipt",
    "inputs": [
      {
        "name": "message",
        "type": "tuple",
        "components": [
          { "name": "id",          "type": "uint256" },
          { "name": "sender",      "type": "address" },
          { "name": "target",      "type": "address" },
          { "name": "data",        "type": "bytes"   },
          { "name": "sourceChain", "type": "uint32"  }
        ]
      }
    ],
    "outputs": [
      { "name": "executed",  "type": "bool"    },
      { "name": "success",   "type": "bool"    },
      { "name": "timestamp", "type": "uint256" }
    ],
    "stateMutability": "view"
  },
  {
    "type": "function",
    "name": "messageHub",
    "inputs": [],
    "outputs": [{ "name": "", "type": "address" }],
    "stateMutability": "view"
  },
  {
    "type": "function",
    "name": "owner",
    "inputs": [],
    "outputs": [{ "name": "", "type": "address" }],
    "stateMutability": "view"
  },
  {
    "type": "function",
    "name": "hubSigningKey",
    "inputs": [],
    "outputs": [{ "name": "", "type": "address" }],
    "stateMutability": "view"
  },
  {
    "type": "function",
    "name": "authorizedRelayers",
    "inputs": [{ "name": "", "type": "address" }],
    "outputs": [{ "name": "", "type": "bool" }],
    "stateMutability": "view"
  },
  {
    "type": "function",
    "name": "processedMessages",
    "inputs": [{ "name": "", "type": "bytes32" }],
    "outputs": [{ "name": "", "type": "bool" }],
    "stateMutability": "view"
  },
  {
    "type": "function",
    "name": "totalExecuted",
    "inputs": [],
    "outputs": [{ "name": "", "type": "uint256" }],
    "stateMutability": "view"
  },
  {
    "type": "function",
    "name": "totalFailed",
    "inputs": [],
    "outputs": [{ "name": "", "type": "uint256" }],
    "stateMutability": "view"
  },
  {
    "type": "event",
    "name": "MessageReceived",
    "inputs": [
      { "name": "messageId", "type": "uint256", "indexed": true  },
      { "name": "sender",    "type": "address", "indexed": true  },
      { "name": "target",    "type": "address", "indexed": true  },
      { "name": "success",   "type": "bool",    "indexed": false }
    ]
  },
  {
    "type": "event",
    "name": "RelayerAuthorized",
    "inputs": [
      { "name": "relayer",    "type": "address", "indexed": true  },
      { "name": "authorized", "type": "bool",    "indexed": false }
    ]
  },
  {
    "type": "event",
    "name": "HubSigningKeyUpdated",
    "inputs": [
      { "name": "newKey", "type": "address", "indexed": true }
    ]
  },
  {
    "type": "event",
    "name": "OwnershipTransferred",
    "inputs": [
      { "name": "previousOwner", "type": "address", "indexed": true },
      { "name": "newOwner",      "type": "address", "indexed": true }
    ]
  },
  { "type": "error", "name": "NotRelayer",       "inputs": [] },
  { "type": "error", "name": "AlreadyProcessed", "inputs": [{ "name": "msgHash", "type": "bytes32" }] },
  { "type": "error", "name": "InvalidSignature", "inputs": [] },
  { "type": "error", "name": "InvalidTarget",    "inputs": [] },
  { "type": "error", "name": "Unauthorized",     "inputs": [] }
]
